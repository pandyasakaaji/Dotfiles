// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    "margin": 7,
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/separator",
        "hyprland/window"	    
    //    "sway/mode",
    //    "sway/scratchpad",
    //    "custom/media"
    ],
    "modules-center": [
        //"hyprland/window"
        "custom/nowplaying"
    ],
    "modules-right": [
    //    "mpd",
    //    "idle_inhibitor",
        "network",
        "custom/separator",
        "pulseaudio",
        "custom/separator",
    //    "power-profiles-daemon",
        "cpu",
        "custom/separator", 
        "memory",
    //    "temperature",
        "custom/separator",
        "backlight",
    //    "keyboard-state",
    //    "sway/language",
        "custom/separator",
        "battery",
    //    "battery#bat2",
        "custom/separator",
        "clock"
    //    "tray",
    //    "custom/power"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ",
            "urgent": "!",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        },
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú "
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí "],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon} {artist} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
        "format-disconnected": "MPD (disconnected)",
        "format-stopped": "MPD (stopped)",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû 1"
        },
        "state-icons": {
            "paused": "(||)",
            "playing": "(|>)"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10,
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        "name": "clock",
        "tooltip-format": "<tt>{calendar}</tt>",
        "interval": 1,
        "format": "{:%I.%M %p}",  // This shows like 08:21:15 PM
        "on-click": "notify-send '‚è∞ Time Now' \"$(date)\""
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´ ", "Ôãâ", "Ôù© "]
    },
    "backlight": {
        // "device": "acpi_video1",
        "tooltip": false,
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 20
        },
        "interval": 5,
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôá¶",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß ",
            "performance": "ÔÉß ",
            "balanced": "Ôâé ",
            "power-saver": "ÔÅ¨ "
        }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} Ôá´ ",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ ",
        "tooltip": false,
        "format-linked": "{ifname} (No IP) Ôûñ ",
        "format-disconnected": "Disconnected ‚ö† ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "Muted Ôö©",
        "tooltip": false,
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "format-icons": {
            "headphones": "ÔÄ•",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº ",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/mpd": {
        "exec": "~/.config/waybar/mpd_title.sh",
        "interval": 2,
        "format": "ÔÄÅ {}"
    },
    "custom/spectrum": {
        "exec": "~/.config/waybar/scripts/spectrum.sh",
        "interval": 1,
        "return-type": "json"
    },
    "custom/nowplaying": {
        "exec": "~/.config/waybar/scripts/player.sh",
        "tooltip": false,
        "on-click": "playerctl previous",         // Left click ‚Üí previous song
        "on-click-middle": "playerctl play-pause",// Middle click ‚Üí toggle play/pause
        "on-click-right": "playerctl next",       // Right click ‚Üí next song
        "interval": 4
    },
    "custom/power": {
        "format" : "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "custom/separator": {
        "format": " / ",
        "tooltip": false
    }
}
